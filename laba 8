#include <stdio.h>
#include <string.h>
int main()
{
    char firstname[100];
    char lastname[100];
    char patronymic[100];
    printf("enter your firstname, lastname, patronymic: ");
    scanf("%s", &firstname);
    printf("%s\n",firstname);
    scanf("%s", &lastname);
    scanf("%s", &patronymic);
    printf("%s\n", patronymic);
    size_t lenght = strlen(lastname);
    printf("last name = %zu\n", lenght);

    return  0;
}
